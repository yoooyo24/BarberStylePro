---
// Footer component for The Cutting Edge Barbershop & Supplies
export interface Props {
  businessName?: string;
  tagline?: string;
  year?: number;
  establishedYear?: number;
}

const { 
  businessName = "The Cutting Edge Barbershop & Supplies",
  tagline = "Where Tradition Meets Modern Sophistication",
  year = 2024,
  establishedYear = 1952
} = Astro.props;
---

<footer class="bg-black py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h3 class="text-3xl font-playfair font-bold text-yellow-500 mb-4">{businessName}</h3>
      <p class="text-stone-400 mb-6">
        {tagline}
      </p>
      <div class="flex justify-center space-x-8 text-stone-400">
        <a href="#home" class="hover:text-yellow-500 transition duration-300">Home</a>
        <a href="#services" class="hover:text-yellow-500 transition duration-300">Services</a>
        <a href="#about" class="hover:text-yellow-500 transition duration-300">About</a>
        <a href="#gallery" class="hover:text-yellow-500 transition duration-300">Gallery</a>
        <a href="#contact" class="hover:text-yellow-500 transition duration-300">Contact</a>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-700">
        <p class="text-stone-500">
          &copy; {year} {businessName}. All rights reserved. | Est. {establishedYear}
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Mobile Optimizations for Footer */
  @media (max-width: 768px) {
    .py-12 {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .px-4 {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .text-3xl {
      font-size: 1.5rem;
      line-height: 1.2;
      margin-bottom: 1rem;
    }

    .text-stone-400.mb-6 {
      font-size: 0.875rem;
      margin-bottom: 1.5rem;
      line-height: 1.4;
    }

    .flex.justify-center.space-x-8 {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      font-size: 0.9rem;
    }

    .mt-8.pt-8 {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
    }

    .text-stone-500 {
      font-size: 0.75rem;
      line-height: 1.3;
    }
  }

  @media (max-width: 480px) {
    .text-3xl {
      font-size: 1.25rem;
    }

    .text-stone-400.mb-6 {
      font-size: 0.8rem;
    }

    .flex.justify-center.space-x-8 {
      gap: 0.75rem;
      font-size: 0.85rem;
    }

    .text-stone-500 {
      font-size: 0.7rem;
    }
  }
</style>
