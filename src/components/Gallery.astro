---
// Gallery section component for The Cutting Edge Barbershop & Supplies
export interface Props {
  galleryImages?: Array<{ 
    name: string; 
    image: string; 
    category: string; 
  }>;
}

const defaultGalleryImages = [
  { name: "Classic Fade", image: "https://images.unsplash.com/photo-1599351431202-1e0f0137899a?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Signature Cut" },
  { name: "Beard Sculpt", image: "https://images.unsplash.com/photo-1621605815971-fbc98d665033?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Grooming" },
  { name: "Modern Style", image: "https://images.unsplash.com/photo-1622286342621-4bd786c2447c?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Contemporary" },
  { name: "Executive Cut", image: "https://images.unsplash.com/photo-1503951914875-452162b0f3f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Professional" },
  { name: "Royal Shave", image: "https://images.unsplash.com/photo-1596728325488-58c87691e9af?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Traditional" },
  { name: "Creative Style", image: "https://images.unsplash.com/photo-1633681926035-ec1ac984418a?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Artistic" },
  { name: "Precision Cut", image: "https://images.unsplash.com/photo-1605497788044-5a32c7078486?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Masterclass" },
  { name: "Vintage Style", image: "/images/Screenshot 2025-07-03 195916.png", category: "Retro" },
  { name: "Fresh Trim", image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&h=600&q=80", category: "Modern" }
];

const { galleryImages = defaultGalleryImages } = Astro.props;
---

<section id="gallery" class="gallery-section">
  <div class="gallery-container">
    <!-- Section Header -->
    <div class="section-header">
      <p class="section-subtitle">Portfolio</p>
      <h2 class="section-title">Our Masterpieces</h2>
      <p class="section-description">
        Witness the transformation. Every cut tells a story of precision, artistry, and attention to detail.
      </p>
    </div>

    <!-- Gallery Grid -->
    <div class="gallery-grid">
      {galleryImages.map((item) => (
        <div class="gallery-item">
          <img src={item.image} alt={item.name} class="gallery-image" />
          <div class="gallery-overlay">
            <h3 class="gallery-title">{item.name}</h3>
            <p class="gallery-category">{item.category}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Featured Styles Showcase -->
    <div class="styles-showcase">
      <div class="style-content">
        <h3>Traditional Excellence</h3>
        <p>Experience the timeless art of traditional barbering. Our master barbers combine classic techniques with modern precision to deliver exceptional results.</p>
        <ul class="style-list">
          <li>Hot towel treatments</li>
          <li>Straight razor shaves</li>
          <li>Classic pompadours</li>
          <li>Traditional beard grooming</li>
        </ul>
      </div>
      <div class="style-image">
        <img src="https://images.unsplash.com/photo-1582771498000-8ad44e6c84db?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600&q=80" alt="Traditional Barbering" />
        <span class="style-badge">Featured</span>
      </div>
    </div>

    <div class="styles-showcase">
      <div class="style-image">
        <img src="/images/Screenshot 2025-07-03 195121.png" alt="Modern Cuts" />
        <span class="style-badge">Trending</span>
      </div>
      <div class="style-content">
        <h3>Modern Innovation</h3>
        <p>Stay ahead of the curve with our contemporary styling services. We're constantly updating our techniques to bring you the latest trends.</p>
        <ul class="style-list">
          <li>Textured crops</li>
          <li>Skin fades</li>
          <li>Designer patterns</li>
          <li>Contemporary styling</li>
        </ul>
      </div>
    </div>

    <!-- View All Button -->
    <div class="view-all-container">
      <a href="#contact" class="view-all-btn">Book Your Style</a>
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap');

  /* Gallery Section */
  .gallery-section {
    padding: 120px 0;
    background: #0a0a0a;
    position: relative;
    color: #fff;
  }

  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 50px;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-subtitle {
    font-size: 14px;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #c9a961;
    margin-bottom: 20px;
  }

  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(40px, 5vw, 60px);
    font-weight: 700;
    margin-bottom: 20px;
  }

  .section-description {
    font-size: 18px;
    color: #888;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.8;
    font-weight: 300;
  }

  /* Gallery Grid */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 80px;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    background: #111;
    cursor: pointer;
    transition: transform 0.5s ease;
    height: 400px;
  }

  .gallery-item:hover {
    transform: translateY(-10px);
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .gallery-item:hover .gallery-image {
    transform: scale(1.1);
  }

  .gallery-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.9) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 30px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover .gallery-overlay {
    opacity: 1;
  }

  .gallery-title {
    font-family: 'Playfair Display', serif;
    font-size: 24px;
    font-weight: 700;
    color: #c9a961;
    margin-bottom: 10px;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-title {
    transform: translateY(0);
  }

  .gallery-category {
    font-size: 14px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 2px;
    transform: translateY(20px);
    transition: transform 0.3s ease 0.1s;
  }

  .gallery-item:hover .gallery-category {
    transform: translateY(0);
  }

  /* Feature Styles Grid */
  .styles-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    margin-top: 120px;
    position: relative;
  }

  .style-content {
    padding: 100px 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: #0f0f0f;
  }

  .style-content h3 {
    font-family: 'Playfair Display', serif;
    font-size: 36px;
    color: #c9a961;
    margin-bottom: 20px;
  }

  .style-content p {
    font-size: 16px;
    line-height: 1.8;
    color: #888;
    margin-bottom: 30px;
  }

  .style-list {
    list-style: none;
  }

  .style-list li {
    padding: 10px 0;
    color: #ccc;
    position: relative;
    padding-left: 25px;
  }

  .style-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #c9a961;
  }

  .style-image {
    position: relative;
    overflow: hidden;
    height: 500px;
  }

  .style-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .style-badge {
    position: absolute;
    top: 30px;
    right: 30px;
    background: #c9a961;
    color: #000;
    padding: 10px 20px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
  }

  /* View All Button */
  .view-all-container {
    text-align: center;
    margin-top: 60px;
  }

  .view-all-btn {
    display: inline-block;
    padding: 18px 50px;
    background: transparent;
    color: #c9a961;
    border: 1px solid #c9a961;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .view-all-btn:hover {
    color: #000;
    background: #c9a961;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(201, 169, 97, 0.3);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .gallery-section {
      padding: 80px 0;
    }

    .gallery-container {
      padding: 0 30px;
    }

    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .styles-showcase {
      grid-template-columns: 1fr;
      margin-top: 80px;
    }

    .style-content {
      padding: 60px 40px;
    }

    .style-image {
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .gallery-section {
      padding: 60px 0;
    }

    .gallery-container {
      padding: 0 20px;
    }

    .section-header {
      margin-bottom: 40px;
    }

    .section-title {
      font-size: clamp(32px, 7vw, 48px);
      margin-bottom: 15px;
    }

    .section-subtitle {
      font-size: 12px;
      letter-spacing: 2px;
      margin-bottom: 15px;
    }

    .section-description {
      font-size: 16px;
      line-height: 1.6;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 60px;
    }

    .gallery-item {
      height: 300px;
    }

    .gallery-overlay {
      padding: 20px;
    }

    .gallery-title {
      font-size: 20px;
      margin-bottom: 8px;
    }

    .gallery-category {
      font-size: 12px;
      letter-spacing: 1px;
    }

    .styles-showcase {
      margin-top: 60px;
    }

    .style-content {
      padding: 40px 20px;
    }

    .style-content h3 {
      font-size: 28px;
      margin-bottom: 15px;
    }

    .style-content p {
      font-size: 14px;
      margin-bottom: 20px;
    }

    .style-list li {
      padding: 8px 0;
      font-size: 14px;
    }

    .style-image {
      height: 250px;
    }

    .style-badge {
      top: 20px;
      right: 20px;
      padding: 8px 16px;
      font-size: 11px;
    }

    .view-all-container {
      margin-top: 40px;
    }

    .view-all-btn {
      padding: 16px 40px;
      font-size: 13px;
      letter-spacing: 1px;
    }
  }

  @media (max-width: 480px) {
    .gallery-section {
      padding: 40px 0;
    }

    .gallery-container {
      padding: 0 15px;
    }

    .section-title {
      font-size: clamp(28px, 8vw, 40px);
    }

    .section-description {
      font-size: 14px;
    }

    .gallery-item {
      height: 250px;
    }

    .gallery-overlay {
      padding: 15px;
    }

    .gallery-title {
      font-size: 18px;
    }

    .style-content {
      padding: 30px 15px;
    }

    .style-content h3 {
      font-size: 24px;
    }

    .style-content p {
      font-size: 13px;
    }

    .style-list li {
      font-size: 13px;
      padding: 6px 0;
    }

    .view-all-btn {
      padding: 14px 30px;
      font-size: 12px;
    }
  }
</style>
