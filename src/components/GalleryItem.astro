---
export interface Props {
  name: string;
  image: string;
}

const { name, image } = Astro.props;
---

<div class="bg-white shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 rounded-lg">
  <img 
    src={image} 
    alt={name} 
    class="w-full h-48 object-cover"
    loading="lazy"
  />
  <div class="p-4">
    <h4 class="font-oswald font-semibold text-black">{name}</h4>
  </div>
</div>