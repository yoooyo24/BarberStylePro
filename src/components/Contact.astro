---
import ContactForm from './ContactForm';

// Contact section component for The Cutting Edge Barbershop & Supplies
export interface Props {
  address?: string;
  phone?: string;
  hours?: {
    weekdays: string;
    saturday: string;
    sunday: string;
  };
}

const { 
  address = "116 King St W Unit 15\nHamilton, ON L8P 4V3",
  phone = "(289) 556-3983",
  hours = {
    weekdays: "Monday: 9:00 AM – 6:00 PM\nTuesday - Friday: 9:00 AM – 7:00 PM",
    saturday: "Saturday: 9:00 AM – 6:00 PM", 
    sunday: "Sunday: Closed"
  }
} = Astro.props;
---

<section id="contact" class="py-20 bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-playfair font-bold text-yellow-500 mb-4">
        Book Your Experience
      </h2>
      <p class="text-lg text-stone-200 max-w-2xl mx-auto">
        Ready to experience the finest in men's grooming? Schedule your appointment today 
        and discover why we're the most trusted barbershop in the city.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Contact Information -->
      <div class="text-stone-200">
        <h3 class="text-2xl font-oswald font-semibold mb-6">Visit Our Shop</h3>
        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <svg class="h-6 w-6 text-yellow-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold mb-1">Address</h4>
              <p class="text-stone-300 whitespace-pre-line">{address}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <svg class="h-6 w-6 text-yellow-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <h4 class="font-semibold mb-1">Phone</h4>
              <p class="text-stone-300 whitespace-pre-line">{phone}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <svg class="h-6 w-6 text-yellow-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold mb-2">Hours</h4>
              <div class="text-stone-300 space-y-1">
                <p class="whitespace-pre-line">{hours.weekdays}</p>
                <p>{hours.saturday}</p>
                <p>{hours.sunday}</p>
              </div>
            </div>
          </div>

          <div class="flex items-center space-x-4 pt-4">
            <a href="#" class="text-yellow-500 hover:text-yellow-400 transition duration-300">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="text-yellow-500 hover:text-yellow-400 transition duration-300">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.748.099.120.112.225.085.347-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"/>
              </svg>
            </a>
            <a href="#" class="text-yellow-500 hover:text-yellow-400 transition duration-300">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Booking Form -->
      <ContactForm client:load />
    </div>
  </div>
</section>

<style>
  /* Mobile Optimizations for Contact */
  @media (max-width: 1024px) {
    .grid.lg\\:grid-cols-2 {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .py-20 {
      padding-top: 3rem;
      padding-bottom: 3rem;
    }

    .px-4 {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .text-4xl.md\\:text-5xl {
      font-size: 2rem !important;
      line-height: 1.2;
      margin-bottom: 1rem;
    }

    .text-lg.text-stone-200 {
      font-size: 1rem;
      line-height: 1.5;
    }

    .text-2xl {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .space-y-6 > * + * {
      margin-top: 1.25rem;
    }

    .flex.items-start.space-x-4 {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .flex.items-start.space-x-4 > div:first-child {
      margin-right: 0;
    }

    .h-6.w-6 {
      height: 1.25rem;
      width: 1.25rem;
    }

    .font-semibold {
      font-size: 1rem;
    }

    .text-stone-300 {
      font-size: 0.875rem;
      line-height: 1.4;
    }

    .flex.items-center.space-x-4 {
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
    }

    .h-6.w-6.social-icon {
      height: 2rem;
      width: 2rem;
    }
  }

  @media (max-width: 480px) {
    .py-20 {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .text-4xl.md\\:text-5xl {
      font-size: 1.75rem !important;
    }

    .text-lg.text-stone-200 {
      font-size: 0.9rem;
    }

    .text-2xl {
      font-size: 1.25rem;
    }

    .space-y-6 > * + * {
      margin-top: 1rem;
    }

    .flex.items-center.space-x-4 {
      gap: 1.5rem;
    }
  }
</style>
