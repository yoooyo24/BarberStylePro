---
export interface Props {
  name: string;
  description: string;
  price: string;
  duration: string;
  image: string;
}

const { name, description, price, duration, image } = Astro.props;
---

<div class="bg-white shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden rounded-lg">
  <img 
    src={image} 
    alt={name} 
    class="w-full h-48 object-cover"
    loading="lazy"
  />
  <div class="p-6">
    <h3 class="text-2xl font-oswald font-semibold text-black mb-2">{name}</h3>
    <p class="text-gray-700 mb-4">
      {description}
    </p>
    <div class="flex justify-between items-center">
      <span class="text-2xl font-bold text-yellow-600">{price}</span>
      <span class="text-sm text-gray-600">{duration}</span>
    </div>
  </div>
</div>